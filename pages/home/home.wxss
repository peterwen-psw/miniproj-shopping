/* pages/home/home.wxss */
.header {
  width: 100%;
  height: 100%;
}

.adpic {
  line-height: 44px;
  margin-left: 10px;
}

.searchBox {
  margin-left: 10px;
  width: 80%;
  height: 44px;
  background-color: #ffff;
  border-radius: 22px;
  display: flex;
  padding: 0 0 0 20px;

  position: sticky;
  top: 50px;
  z-index: 999;
}

.searchIcon {
  margin-left: 10px;
}

.searchSwiper {
  flex: 1;
  height: 44px;
  line-height: 44px;
  margin-left: 10px;
  color: darkgray;
}
.backTop {
  position: fixed;
  bottom: 10px;
  right: 10px;
  height: 32px;
  width: 32px;
  border-radius: 50%;
  background-color: #efefef;
  display: flex;
  justify-content: center;
  align-items: center;
}